{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 79,
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "error",
				"useHookAtTopLevel": "error"
			},
			"nursery": { "noConsole": "warn", "useJsxKeyInIterable": "error" },
			"suspicious": { "useAwait": "error" }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "none",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": false
		}
	},
	"files": { "ignore": ["./node_modules/**/*.*", "dist/**/*.*"] }
}
